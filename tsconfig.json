{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-dom",
      "react-router-dom",
      "node"
    ],
    "allowImportingTsExtensions": false,
    "baseUrl": "src",  // src 폴더를 기준으로 경로 설정
    "paths": {
      "@/*":["*"],
      "@etc/*": ["etc/*"],
      "@firebaseApi/*": ["firebase/*"],
      "@context/*": ["context/*"],
      "@hooks/*": ["core/hooks/*"],
      "@router/*": ["feature-module/router/*"]
    }
  },
  "include": [
    "src",
    "global.d.ts"
  ]
}







